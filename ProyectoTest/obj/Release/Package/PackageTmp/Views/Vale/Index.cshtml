@model ProyectoTest.Models.Cliente
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inicio</title>
    @Styles.Render("~/Content/css")
</head>


<body class="" style='background-image: url(@Url.Content("~/Imagenes/LongHorn/Fondo.jpg"));background-size: cover;'>

    <style>

        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
            border: none;
        }

        body {
            min-height: 100vh;
            background-color: chocolate;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
        }

 
        .title {
            margin-bottom: 20px;
        }

        .input-group {
            margin: 20px 0;
            position: relative;
        }

            .input-group label {
                display: inline-block;
                margin-bottom: 5px;
                color: white; /* Texto blanco */
                font-weight: bold; /* Negrita */
            }

            .input-group input {
                display: block;
                width: 100%;
                padding: 10px;
                opacity: 0.8; /* Añade la propiedad de opacidad */
            }

        .error input {
            border: 3px red solid;
        }

        .success input {
            border: 3px green solid;
        }

        .input-group i {
            position: absolute;
            right: 10px;
            top: 35px;
            visibility: hidden;
        }

        .success i.fa-check-circle {
            visibility: visible;
            color: green;
        }

        .error i.fa-exclamation-circle {
            visibility: visible;
            color: red;
        }

        .input-group p {
            font-size: 15px;
            color: red;
            visibility: hidden;
        }

        .error p {
            visibility: visible;
        }

        .btn {
            width: 100%;
            padding: 10px;
            font-size: 18px;
            background-color: rgba(146, 17, 21,0.8);
            color: #fff;
            border: none;
            font-weight: bold; /* Negrita */
        }

        #create-account-form {
            width: 400px;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.0); /* Agrega opacidad al fondo blanco */
            
        }
            #create-account-form label {
                color: white; /* Texto blanco */
                font-weight: bold; /* Negrita */
            }

        .star-green {
            color: green; /* Establece el color verde */
            font-size: 24px; /* Tamaño de las estrellas */
            margin-right: 5px; /* Espaciado entre las estrellas (puedes ajustar según tus preferencias) */
        }

        .star-yellow {
            color: yellow; /* Establece el color amarillo */
            font-size: 24px; /* Tamaño de las estrellas */
            margin-right: 5px; /* Espaciado entre las estrellas (puedes ajustar según tus preferencias) */
        }

        .star-red {
            color: red; /* Establece el color rojo */
            font-size: 24px; /* Tamaño de las estrellas */
            margin-right: 5px; /* Espaciado entre las estrellas (puedes ajustar según tus preferencias) */
        }

        .form-group input {
            opacity: 0.6; /* Ajusta el valor según sea necesario */
            background-color: #b48a10; /* Color de fondo deseado */
        }
            
        .form-group input::placeholder,
            .form-group textarea::placeholder,
            .form-group select::placeholder {
                color: white; /* Color del marcador de posición deseado */
            }

            .form-group input[type="date"]::placeholder {
                color: white; /* Cambia este color según tus preferencias */
            }
        /* Cambiar el color del texto dentro del campo de fecha */
        #cumpleanos::-webkit-datetime-edit-text {
            color: white; /* Reemplaza 'tu_color_preferido' con el color deseado */
        }

        #cumpleanos::-webkit-datetime-edit-month-field,
        #cumpleanos::-webkit-datetime-edit-day-field,
        #cumpleanos::-webkit-datetime-edit-year-field {
            color: white; /* Reemplaza 'tu_color_preferido' con el color deseado */
        }

    </style>

    <div class="container" >
        <div class="row">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

            <form id="create-account-form" action="@Url.Action("RegistrarCliente", "Login")" method="post">
                <!-- NOMBRE -->
                <div class="form-group">
                    <label for="nombre">Nombre</label>
                    <input type="text" class="form-control" id="nombre" placeholder="Nombre" name="nombre" required>
                </div>
                <!-- APELLIDOS -->
                <div class="form-group">
                    <label for="apellidos">Apellidos</label>
                    <input type="text" class="form-control" id="apellidos" placeholder="Apellidos" name="apellidos" required>
                </div>

                <!-- EMAIL -->
                <div class="form-group">
                    <label for="correo">Correo electrónico</label>
                    <input type="email" class="form-control" id="correo" placeholder="Email" name="email" required>
                </div>

                <!-- TELÉFONO -->
                <div class="form-group">
                    <label for="telefono">Teléfono</label>
                    <input type="text" class="form-control" id="telefono" placeholder="Móvil" name="telefono" required>
                </div>

                <!-- CUMPLEAÑOS -->
                <div class="form-group">
                    <label for="cumpleanos">Cumpleaños</label>
                    <input type="date" class="form-control" id="cumpleanos" placeholder="dd/mm/aa" name="cumpleanos" required>
                </div>

                <!-- DISTRITO -->
                <div class="form-group">
                    <label for="distrito">Distrito</label>
                    <input type="text" class="form-control" id="distrito" placeholder="Distrito de domicilio" name="distrito" required>
                </div>

                <hr />
                <!-- ESTRELLAS -->
                <div class="text-center">
                    <br />
                    <label class="radio-inline">
                        <input type="radio" name="calificacion" value="3">
                        <i class="bi bi-star-fill star-green"></i><i class="bi bi-star-fill star-green"></i><i class="bi bi-star-fill star-green"></i>
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="calificacion" value="2">
                        <i class="bi bi-star-fill star-yellow"></i><i class="bi bi-star-fill star-yellow"></i>
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="calificacion" value="1" required>
                        <i class="bi bi-star-fill star-red"></i>
                    </label>
                </div>
                <hr />
                <!-- Checkbox para recibir promociones -->
                <input type="hidden" name="RecibirPromociones" value="false">
                <div class="form-group">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="RecibirPromociones" name="RecibirPromociones" value="true">
                        <label class="form-check-label" for="RecibirPromociones">Deseo recibir promociones</label>
                    </div>
                </div>
                <hr />
                <button type="submit" class="btn btn-primary">Enviar</button>
            </form>
        </div>
    </div>




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")


</body>


