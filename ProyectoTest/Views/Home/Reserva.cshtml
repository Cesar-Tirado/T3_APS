
@{
    ViewBag.Title = "Reservas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .modal-content {
        margin-left: -470px;
        align-content: center !important;
        justify-content: center !important;
        width: 1000px;
    }
</style>


<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Mantenedores</a></li>
    <li class="breadcrumb-item active">Reserva</li>
</ol>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i> Listado de Reserva
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-12">
                <button class="btn btn-success" type="button" onclick="abrirModal(null)">Crear Nuevo</button>
            </div>
        </div>

        <hr />
        <table id="tabla" class="display responsive" style="width:100%">
            <thead>
                <tr>
                    <th>NombreLocal</th>
                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>


<!-- MODAL -->
<div class="modal fade" id="FormModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Reserva</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input id="txtid" type="hidden" value="0" />
                <form id="formNivel">
                    <div class="row">
                        <div class="col-sm-12 mb-3">
                            <div class="form-group">
                                <label for="txtdescripcion">Nombre Local</label>
                                <input type="text" class="form-control required" id="txtdescripcion" name="descripcion" autocomplete="off">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class=" col-6">
                            <div class="form-group">
                                <label for="cboEstado">Estado</label>
                                <select id="cboEstado" class="form-select">
                                    <option value="1">Activo</option>
                                    <option value="0">No Activo</option>
                                </select>
                            </div>
                        </div>

                        <div class=" col-6">
                            <div class="form-group">
                                <label for="cboEstado">Máximo Cantidad de Personas para Reservar</label>
                                <input class="form-control" type="text" id="txtcantidad" placeholder="" aria-label="default input example">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>


<!-- MODAL FECHAS -->
<div class="modal fade" id="FormModalFecha" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Reserva</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="row mt-2 mx-4">
                <div class=" col-6">
                    <div class="form-group">
                        <label for="cboAño">Año</label>
                        <select id="cboAño" class="form-select">
                            <option value="0">2023</option>
                            <option value="1">2024</option>
                        </select>
                    </div>
                </div>

                <div class=" col-6">
                    <div class="form-group">
                        <label for="cboMes">Mes</label>
                        <select id="cboMes" class="form-select">
                            <option value="0">10</option>
                            <option value="1">11</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="row  mt-4 mx-4">
                <div class="col-6 ">
                    <label for="" class="fs-4 fw-bold">Fechas Disponible  </label>
                    <p class="mb-0" for="">(Marca con check días habilitados y sin check días no habilitados)  </p>

                    <div id="demo-calendar-event"></div>
                </div>

                <div class="col-6 ">
                    <label for="" class="fs-4 fw-bold">Horario Disponible  </label>
                    <p for="">(Fondo rojo horas habilitadas, fondo blanco no habilitado)  </p>

                    <div class="btn-group-vertical mt-2" role="group" aria-label="Basic checkbox toggle button group">
                        <input type="checkbox" class="btn-check" id="btncheck1" autocomplete="off">
                        <label class="btn btn-outline-danger" for="btncheck1">12:00pm</label>

                        <input type="checkbox" class="btn-check" id="btncheck2" autocomplete="off">
                        <label class="btn btn-outline-danger" for="btncheck2">13:00pm</label>

                        <input type="checkbox" class="btn-check" id="btncheck3" autocomplete="off">
                        <label class="btn btn-outline-danger" for="btncheck3">14:00pm</label>

                        <input type="checkbox" class="btn-check" id="btncheck4" autocomplete="off">
                        <label class="btn btn-outline-danger" for="btncheck4">15:00pm</label>

                        <input type="checkbox" class="btn-check" id="btncheck5" autocomplete="off">
                        <label class="btn btn-outline-danger" for="btncheck5">16:00pm</label>

                        <input type="checkbox" class="btn-check" id="btncheck6" autocomplete="off">
                        <label class="btn btn-outline-danger" for="btncheck6">17:00pm</label>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary" onclick="Guardar2()">Guardar</button>
                </div>

            </div>
        </div>
    </div>
</div>


@section scripts{

    <script>
        var tabladata;

        $(document).ready(function () {

            tabladata = $('#tabla').DataTable({
                responsive:true,
                "ajax": {
                    "url": '@Url.Action("ListarLocales", "Home")',
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "NombreLocal" },
                    {
                        "data": "Activo", "render": function (data) {
                            if (data) {
                                return '<span class="badge bg-success">Activo</span>'
                            } else {
                                return '<span class="badge bg-danger">No Activo</span>'
                            }
                        }
                    },
                    {
                        "data": "Id", "render": function (data, type, row, meta) {
                            return $("<button>").addClass("btn btn-primary btn-editar btn-sm").append(
                                $("<i>").addClass("fas fa-pen")).attr({ "data-informacion": JSON.stringify(row) })[0].outerHTML
                                +
                                $("<button>").addClass("btn btn-danger btn-eliminar btn-sm ms-2").append(
                                    $("<i>").addClass("fas fa-trash")).attr({ "data-informacion": JSON.stringify(row) })[0].outerHTML
                                +
                                $("<button>").addClass("btn btn-primary btn-fechas btn-sm ms-2").text(
                                    "Fecha").attr({ "data-informacion": JSON.stringify(row) })[0].outerHTML;
;
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "130px"
                    }
                ],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json"
                }
            });
        });


        $(document).on('click', '.btn-editar', function (event) {
            var json = $(this).data("informacion")
            abrirModal(json)
        });

        $(document).on('click', '.btn-fechas', function (event) {
            var json = $(this).data("informacion")
            abrirModalFecha(json)
        });

        function abrirModalFecha(json) {
            $("#txtid").val(0);
            $("#cboEstado").val(1);

            if (json != null) {
                $("#txtid").val(json.Id);
                $("#txtdescripcion").val(json.NombreLocal);
                $("#txtcantidad").val(json.Cantidad);
                $("#cboEstado").val(json.Activo == true ? 1 : 0);
            }
            $('#FormModalFecha').modal('show');
        }

        function abrirModal(json) {
            $("#txtid").val(0);
            $("#txtdescripcion").val("");
            $("#cboEstado").val(1);

            if (json != null) {
                $("#txtid").val(json.Id);
                $("#txtdescripcion").val(json.NombreLocal);
                $("#txtcantidad").val(json.Cantidad);
                $("#cboEstado").val(json.Activo == true ? 1 : 0);
            }
            $('#FormModal').modal('show');
        }

        $(document).on('click', '.btn-eliminar', function (event) {
            var json = $(this).data("informacion")

            jQuery.ajax({
                url: '@Url.Action("EliminarLocales", "Home")',
                type: "POST",
                data: JSON.stringify({ id: json.Id}),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (data.resultado) {
                        tabladata.ajax.reload();
                    } else {
                        alert("No se pudo eliminar")
                    }
                },
                error: function (error) {
                    console.log(error)
                },
                beforeSend: function () {
                },
            });
        });

        var Anio = [];
        var elements = [];
        var $el = $('#demo-calendar-event');
        $(document).ready(function () {
            $el.zabuto_calendar({
                classname: 'table clickable'
            });
        });

        $el.on('zabuto:calendar:day', function (e) {
            console.log(e);
            if (!elements.includes(e.date.getDay())) {
                $(e.element).css('color', 'red');
                
                elements.push(e.date.getDay());
            }
            else {
                $(e.element).css('color', '');
                elements.shift();
            }
            Anio.push(e.value);
            
            var now = new Date();
        });


        function Guardar2() {
            var checkboxes = document.querySelectorAll('.btn-check');
            var horasSeleccionadas = [];
            checkboxes.forEach(function (checkbox, index) {
                if (checkbox.checked) {
                    var label = document.querySelector('label[for="' + checkbox.id + '"]');
                    var hora = label.textContent.trim();
                    horasSeleccionadas.push(hora);
                }
            });

            var request = {
                oFecha: {
                    IdReservaLocal: $("#txtid").val(),
                    Anio: $("#cboAño option:selected").text(),
                    Mes: $("#cboMes option:selected").text(),
                    Dias: Anio.join(','),
                    Horas: horasSeleccionadas.join(',')
                }
            }
            jQuery.ajax({
                url: '@Url.Action("GuardarFechas", "Home")',
                type: "POST",
                data: JSON.stringify(request),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (data.resultado) {
                        tabladata.ajax.reload();
                        $('#FormModalFecha').modal('hide');
                    } else {
                        alert("No se pudo guardar los cambios2")
                    }
                },
                error: function (error) {
                    console.log(error)
                },
                beforeSend: function () {
                },
            });
        }

        function Guardar() {
            var request = {
                objeto: {
                    Id: $("#txtid").val(),
                    NombreLocal: $("#txtdescripcion").val(),
                    Cantidad: $("#txtcantidad").val(),
                    Activo: parseInt($("#cboEstado").val()) == 1 ? true : false
                }
            }
            jQuery.ajax({
                url: '@Url.Action("GuardarLocales", "Home")',
                type: "POST",
                data: JSON.stringify(request),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (data.resultado) {
                        tabladata.ajax.reload();
                        $('#FormModal').modal('hide');
                    } else {
                        alert("No se pudo guardar los cambios")
                    }
                },
                error: function (error) {
                    console.log(error)
                },
                beforeSend: function () {
                },
            });
        }

    </script>
}
